generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Restaurant {
  id         Int        @id @default(autoincrement())
  storeId    String     @unique
  name       String
  country    String
  region     String
  zipcode    String
  city       String
  address    String
  categories Category[]
  products   Product[]
}

model Category {
  id           Int        @id @default(autoincrement())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  ref          String     @unique
  name         String
}

model Product {
  id           Int        @id @default(autoincrement())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  ref          String     @unique
  name         String
  designation  String
  description  String
  price        Int
}
